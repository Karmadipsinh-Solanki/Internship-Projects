@model List<OrderManagementSystemDAL.Models.CustomerOrder>

@{
    ViewData["Title"] = "Customer Order Page";
}

<div id="body">

    @if (Model != null && Model.Any())
    {
        <div>
            <div class="d-flex justify-content-between align-items-center">
                <h2>CustomerOrder  Table</h2>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        @* <th>ID</th> *@
                        <th>Customer Name</th>
                        <th>Total Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customerOrder in Model)
                    {
                        <tr>
                            <td>@customerOrder.customer_name</td>
                            <td>@customerOrder.Total_Amount</td>
                        </tr>
                    }
