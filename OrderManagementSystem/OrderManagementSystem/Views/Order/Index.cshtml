@model List<OrderManagementSystemDAL.Models.order>

@{
    ViewData["Title"] = "Orders";
}

<div id="body">

    @if (Model != null && Model.Any())
    {
        <div>
            <div class="d-flex justify-content-between align-items-center">
                <h2>Order Table</h2>
                @* <button class="addStudentBtn me-0" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"> *@
                <a asp-action="Add Order" asp-controller="Home" class="btn btn-primary">
                    <span class="h6">Add Order</span>
                </a>
                @* </button> *@
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Product Name</th>
                        <th>Customer Id</th>
                        <th>Quantity</th>
                        <th>Order Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.order_id</td>
                            <td>@order.product_name</td>
                            <td>@order.customer_id</td>
                            <td>@order.quantity</td>
                            <td>@order.order_amount</td>
                            <td>
                                <a asp-action="EditOrder" asp-route-id="@order.order_id" class="btn btn-primary" style="text-decoration:none">Update</a>
                                <a asp-action="DeleteOrder" asp-route-id="@order.order_id" class="btn btn-primary" style="text-decoration:none">Delete</a>
                            </td>
                            <!-- Add more columns as needed -->
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }



</div>