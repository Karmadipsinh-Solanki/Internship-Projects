@model List<OrderManagementSystemDAL.Models.order>

@{
    ViewData["Title"] = "Orders";
}

<div id="body">

    @if (Model != null && Model.Any())
    {
        <div>
            <div class="d-flex justify-content-between align-items-center">
                <h2>Order Table</h2>
                <div>
                    <a asp-action="AddOrder" asp-controller="Order" class="btn btn-primary">
                        <span class="h6">Add Order</span>
                    </a>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#deleteAll">
                        Delete All
                    </button>
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th><input id="checkall" onclick="oncheck()" type="checkbox" /></th>
                        @* <th>ID</th> *@
                        <th>Product Name</th>
                        <th>Customer Name</th>
                        <th>Quantity</th>
                        <th>Order Amount</th>
                        <th>Total Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td><input class="checkboxes" data-item-id="@order.order_id" type="checkbox" onchange="checkAll(event)" /></td>
                            @* <td>@order.order_id</td> *@
                            <td>@order.product_name</td>
                            <td>@order.customer_name</td>
                            <td>@order.quantity</td>
                            <td>@order.order_amount</td>
                            <td>@order.total_amount</td>
                            <td>
                                <a asp-action="EditOrder" asp-route-id="@order.order_id" class="btn btn-primary" style="text-decoration:none">Update</a>
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal-@order.order_id">
                                    Delete
                                </button>

                                <!-- Modal for single delete-->
                                <div class="modal fade" id="exampleModal-@order.order_id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Are You sure, You want to delete?
                                            </div>
                                            <div class="modal-footer">
                                                <a asp-action="DeleteOrder" asp-route-id="@order.order_id" class="btn btn-primary" style="text-decoration:none">Delete</a>
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Modal for selected delete-->
                                <div class="modal fade" id="deleteAll" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Are You sure, You want to delete?
                                            </div>
                                            <div class="modal-footer">
                                                <button class="btn btn-primary" onclick="deleteall()">Yes</button>
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <!-- Add more columns as needed -->
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <script>

        //uncheck thead checkbox when any of the checkbox is unchecked
        function checkAll(event) {
            var checkall = document.getElementById("checkall");
            if (event.target.checked) {
                checkall.checked = true;
            } else {
                checkall.checked = false;
            }
        }

        document.querySelectorAll(".checkboxes").forEach(function (checkbox) {
            checkbox.addEventListener("change", function () {
                var checkboxes = document.querySelectorAll(".checkboxes");
                var allChecked = Array.from(checkboxes).every(function (checkbox) {
                    return checkbox.checked;
                });
                document.getElementById("checkall").checked = allChecked;
            });
        });

        // check the checkboxes
        function oncheck() {
            var check = document.getElementById('checkall').checked;
            if (check) {
                var len = document.getElementsByClassName('checkboxes');
                for (var i = 0; i < len.length; i++) {
                    len[i].checked = true;
                }
            } else {
                var len = document.getElementsByClassName('checkboxes');
                for (var i = 0; i < len.length; i++) {
                    len[i].checked = false;
                }
            }
            console.log(check);
        }
        function deleteall() {
            console.log(selectedMenuItems)
            debugger
            console.log("button pressed");
            //
            var selectedOrderIds = [];
            $('.checkboxes:checked').each(function () {
                selectedOrderIds.push($(this).data('item-id'));
            });

            var selectedMenuItems = selectedOrderIds.join(',');
            //

            var classes = document.getElementsByClassName('checkboxes');

            var count = 0;
            for (var i = 0; i < classes.length; i++) {
                if (classes[i].checked == true) {
                    continue;
                } else {
                    count++;
                }
            }
            if (count == classes.length) {
                alert('No checkboxes are ticked');
            } else {
                $.ajax({
                    url: '/Order/DeleteSelectedOrder',
                    type: 'POST',
                    data: { orderids: selectedMenuItems },
                    dataType: 'json',
                    success: function (response) {
                        console.log(response.response);
                        if (response.isDeleted) {
                            location.reload();
                        }
                    },
                    error: function () {
                        alert('An error occurred.');
                    }
                });
            }
        }

    </script>

</div>