@{
    ViewData["Title"] = "ForgotPassword";
}
@model HalloDoc.DataLayer.ViewModels.ForgotPassword;
@section Styles {
    <link href="~/css/forgotPassword.css" rel="stylesheet" type="text/css" />
}
<div id="body">
    <partial name="Toast" />
