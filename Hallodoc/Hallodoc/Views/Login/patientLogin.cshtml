@model LoginViewModel;
@{
    ViewData["Title"] = "Patient-Login";
}
@section Styles {
    <link href="~/css/patientLogin.css" rel="stylesheet" type="text/css" />
}
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
@section script {
    <script src="~/js/patientLoginValidation.js"></script>
}

<div class="parent-div">
    <div class="container d-flex justify-content-between flex-column align-items-center ">
        <img src="~/SRS Screen Shorts/11116016_415.jpg" class="bg-img img-fluid">
        <div class="d-flex justify-content-center align-items-center ">
            <img src="~/SRS Screen Shorts/Fig56. Patient site 1.png "
                 class="patientsite d-flex justify-content-center align-items-center ">
        </div>
        <div class="w-100 d-flex flex-column outerform">
            <div class="back">
                <a asp-controller="Login" asp-action="patientsite">
                    <strong>
                        <span class="h5">&lt Back</span>
                    </strong>
                </a>
            </div>
            <div class="d-flex justify-content-center align-items-center ">
                <header class="h1 mb-5">Login To Your Account</header>
            </div>
            <form asp-controller="Login" asp-action="patientLogin" method="post">
            <div class="email form-floating mb-3">
                    <input type="email" class="form-control" id="email" placeholder="name@example.com" asp-for="Email">
                <label for="floatingInput">Email address</label>
                <img src="~/SRS Screen Shorts/profile.png" class="profile">
            </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            <div class="password form-floating mb-3">
                    <input type="password" class="form-control" id="password" placeholder="Password" asp-for="PasswordHash">
                <label for="floatingPassword">Password</label>
                <div class="eye">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="24" fill="currentColor" class="bi bi-eye"
                         viewBox="0 0 16 16">
                        <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z" />
                        <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0" />
                    </svg>
                </div>
            </div>
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            <div class="d-flex justify-content-center align-items-center ">
                  <button class="btn" type="submit"><span>Log In</span></button>
             </div>
            </form>
        </div>
        <div class="d-flex justify-content-center ">Terms Of Conditions|Privacy Policy</div>
    </div>
</div>