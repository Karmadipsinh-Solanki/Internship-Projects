<script>
    //me and someone else modal
    function mePressed() {
        document.getElementById('someone-else-button').style.backgroundColor = "white";
        document.getElementById('someone-else-button').style.color = "#00ccff";
        document.getElementById('me-button').style.backgroundColor = "#00ccff";
        document.getElementById('me-button').style.color = "white";
        document.getElementById('meText').style.color = "white";
        document.getElementById('redirect-text').value = "meModal";
    }
    function someoneElsePressed() {
        document.getElementById('someone-else-button').style.backgroundColor = "#00ccff";
        document.getElementById('someone-else-button').style.color = "white";
        document.getElementById('me-button').style.backgroundColor = "white";
        document.getElementById('me-button').style.color = "#00ccff";
        document.getElementById('meText').style.color = "#00ccff";
        document.getElementById('redirect-text').value = "someoneModal";
    }

    //function ContinuePressed(){
    const ContinuePressed = () => {
        window.location.assign(`./${document.getElementById("redirect-text").value}`);
    }
    //}

    var modal = document.getElementById("myModal");

    var btn = document.getElementById("submit-button");
    var btn2 = document.getElementById("submit-button-2");

    var span = document.getElementsByClassName("close")[0];
    var span2 = document.getElementById("close-icon");


    btn.onclick = function () {
        modal.style.display = "flex";
    }
    btn2.onclick = function () {
        modal.style.display = "flex";
    }
    span.onclick = function () {
        modal.style.display = "none";
    }
    span2.onclick = function () {
        modal.style.display = "none";
    }
    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }

    $(document).ready(function () {
        // Add click event to all buttons
        $('.btn').click(function () {
            // Remove active class from all buttons
            $('.btn').removeClass('active');

            // Add active class to clicked button
            $(this).addClass('active');
        });
    });
</script>
