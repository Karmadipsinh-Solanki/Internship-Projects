@model DashboardViewModel;
@{
    ViewData["Title"] = "View-Document";
}
@section Styles {
    <link href="~/css/View-Document.css" rel="stylesheet" type="text/css" />
}
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
<partial name="header" />
<hr class="mb-0 mt-0 d-none d-md-block horizontal-line">
<partial name="navbar" />
<div class="maindiv container d-flex flex-column justify-content-center align-items-center">
    <div class="firstdiv d-flex justify-content-between align-items-center">
        <h3>Documents</h3>
        <div class="backbutton mb-3 mt-3">
            <a asp-controller="PatientDashboard" asp-action="patientDashboard">
                <button type="button" class="">&lt Back</button>
            </a>
        </div>
    </div>

    <div class="container shadow p-3">
        <div class="h6 mb-3">Patient Name</div>
        <div class="mb-3">
            <span>@* @Model?.name *@(Confirmation Number)</span>
        </div>
        <div class="mb-3">
            <span>Check here for any files tha you or the doctors of your subsequents requestors have attached for you to review.</span>
        </div>
        <div class="upload mb-3">
            <input type="file" class="inputUpload" placeholder="Select File">
            <button class="uploadButton" type="button" onclick="choose_file()" id="choose-file-button">
                <img src="~/SRS Screen Shorts/cloud-upload-icon.svg" style="color:#0dcaf0">
                <span class="button">Upload</span>
            </button>
        </div>

        <div class="seconddiv d-flex justify-content-between align-items-center mb-3">
            <h5>Documents</h5>
            <div class="backbutton mb-3 mt-3">
                <a asp-controller="PatientDashboard" asp-action="patientDashboard">
                    <button type="button" class="">Download All</button>
                </a>
            </div>
        </div>
        <table class="table d-none d-md-block">
            <thead>
                <tr class="table-light htable"" style="background-color: #ededed !important;">
                    <th scope="col" style="color: rgb(73, 73, 73);font-weight:500;"><div class="square d-inline"></div></th>
                    <th></th>
                    <th scope="col" style="color: rgb(73, 73, 73);font-weight:500;width: 70%;">Uploader</th>
                    <th scope="col" style="color: rgb(73, 73, 73);font-weight:500;">Upload Date <span class="mx-1">&uarr</span></th>
                    <th scope="col" style="color: rgb(73, 73, 73);font-weight:500;">Actions</span></th>
                </tr>
            </thead>
                @* @foreach (var item in Model.requests)
                { *@
                <tr>
                    <td><div class="square d-inline">.</div></td>
                    <td>
                    <img src="~/SRS Screen Shorts/PDFIcon.png " />
                        <span>PDF Name</span>
                    </td>
                    <td>Uploader</td>
                    <td>
                            @* @item.CreatedDate.ToString("MMMM dd,yyyy") *@
                    </td>
                    <td>
                        <button style="border:1px solid #0dcaf0;border-radius:5px">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#0dcaf0" class="bi bi-cloud-download" viewBox="0 0 16 16">
                            <path d="M4.406 1.342A5.53 5.53 0 0 1 8 0c2.69 0 4.923 2 5.166 4.579C14.758 4.804 16 6.137 16 7.773 16 9.569 14.502 11 12.687 11H10a.5.5 0 0 1 0-1h2.688C13.979 10 15 8.988 15 7.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 2.825 10.328 1 8 1a4.53 4.53 0 0 0-2.941 1.1c-.757.652-1.153 1.438-1.153 2.055v.448l-.445.049C2.064 4.805 1 5.952 1 7.318 1 8.785 2.23 10 3.781 10H6a.5.5 0 0 1 0 1H3.781C1.708 11 0 9.366 0 7.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383" />
                            <path d="M7.646 15.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 14.293V5.5a.5.5 0 0 0-1 0v8.793l-2.146-2.147a.5.5 0 0 0-.708.708z" />
                        </svg>
                        </button>
                    </td>
                </tr>
                @* } *@
    </div>
</div>
