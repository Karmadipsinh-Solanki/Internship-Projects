@model PatientHistoryViewModel;

<div class="d-none d-md-block">
    <table class="table" id="table-data-patient-history">
        <thead>
            <tr>
                @*<th style="width:80px !important;background-color: #ededed !important;"><input type="checkbox" id="checkall" onclick="oncheck()" style="height: 18px;width: 18px;" /></th>*@
                <th style="background-color: #ededed !important;color: rgb(73, 73, 73);font-weight:500;">First Name</th>
                <th style="background-color: #ededed !important;color: rgb(73, 73, 73);font-weight:500;">Last Name</th>
                <th style="background-color: #ededed !important;color: rgb(73, 73, 73);font-weight:500;">Email</th>
                <th style="background-color: #ededed !important;color: rgb(73, 73, 73);font-weight:500;">Phone</th>
                <th scope="col" style="color: rgb(73, 73, 73);font-weight:500;background-color: #ededed !important;">Address</th>
                <th scope="col" style="color: rgb(73, 73, 73);font-weight:500;background-color: #ededed !important;">Actions</th>
            </tr>
        </thead>
        @foreach (var item in Model.Users)
        {
            <tr style="">
                @*<td><input class="checkboxes" type="checkbox" style="height: 18px;width: 18px;" value="@item.RequestWiseFileId" /></td>*@
                <td class="newtd">
                    @item.FirstName
                </td>
                <td class="newtd">@item.LastName</td>
                <td class="newtd">@item.Email</td>
                <td class="newtd">@item.Mobile</td>
                <td class="newtd">@item.Street , @item.City , @item.State</td>
                <td class="newtd d-flex">
                    <a class="textdeconone link" asp-action="PatientRecord" asp-controller="AdminDashboard" asp-route-id="@item.UserId">
                        <span>Explore</span>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
<div class="d-block d-md-none">
    <div class="accordion accordion-flush" id="accordionFlushExample">
        @foreach (var item in Model.Users)
        {
            <div class="accordion-item">
                <h2 class="accordion-header" id="flush-heading@(item.UserId)">
                    <button class="accordion-button collapsed main-accordion-div" style="background-color:#E5F2F8 !important;" type="button" data-bs-toggle="collapse"
                            data-bs-target="#flush-collapse@(item.UserId)" aria-expanded="false"
                            aria-controls="flush-collapse">
                        <div class="main-accordion-sub-div">
                            <span style="color:black;font-size:15px;">@item.FirstName @item.LastName</span>
                            <span style="margin-top:20px;color:black;font-size:15px;">
                                @item.Mobile
                            </span>
                        </div>
                    </button>
                </h2>
                <div id="flush-collapse@(item.UserId)" class="accordion-collapse collapse"
                     aria-labelledby="flush-heading@(item.UserId)" data-bs-parent="#accordionFlushExample"
                     style="position: relative;">
                    <div class="accordion-body accordion-main-body" style="background-color:#E5F2F8 !important;">
                        <div class="accordian-items d-flex align-items-center mb-1">
                            <div class="d-inline-block circle" style="border:1px solid rgb(0, 204, 255)!important;">
                                <svg xmlns="http://www.w3.org/2000/svg" style="margin:2px;" width="10" height="10" fill="#00ccff" class="bi bi-envelope" viewBox="0 0 16 16">
                                    <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z" />
                                </svg>
                            </div>
                            <span class="accordian-item-text">Email: <span class="accordian-item-text2 email-container">@item.Email</span></span>
                        </div>
                        <div class="accordian-items d-flex align-items-center mb-3">
                            <div class="d-inline-block circle" style="border:1px solid rgb(0, 204, 255)!important;">
                                <svg xmlns="http://www.w3.org/2000/svg" style="margin:2px;" width="10" height="10" fill="#00ccff" class="bi bi-telephone" viewBox="0 0 16 16">
                                    <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.6 17.6 0 0 0 4.168 6.608 17.6 17.6 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.68.68 0 0 0-.58-.122l-2.19.547a1.75 1.75 0 0 1-1.657-.459L5.482 8.062a1.75 1.75 0 0 1-.46-1.657l.548-2.19a.68.68 0 0 0-.122-.58zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z" />
                                </svg>
                            </div>
                            <span class="accordian-item-text">Phone: <span class="accordian-item-text2">@item.Mobile</span></span>
                        </div>
                        <div class="accordion-btns d-flex justify-content-end">
                            <a class="textdeconone link2 " asp-action="PatientRecord" asp-controller="Admin" asp-route-id="@item.UserId">
                                <span>Explore</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div class="pagination">
    <span style="margin-right:10px;">Pages:</span>
    @if (Model.CurrentPage > 1)
    {
        <a style="color:#00ccff !important;" data-page="@(Model.CurrentPage - 1)">Previous</a>
    }

    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <a data-page="@i" class="@(i == Model.CurrentPage ? "pagination-active" : "")">@i</a>
    }

    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a style="color:#00ccff !important;" data-page="@(Model.CurrentPage + 1)">Next</a>
    }
</div>
<script>
    $(document).ready(function () {
        $('.pagination a').click(function (e) {
            e.preventDefault();
            //console.log("hiiiiiii");
            var page = $(this).attr('data-page');
            filter(page, 10);
        });
    });
</script>