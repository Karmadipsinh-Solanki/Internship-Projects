@using System.Collections;
@model ProviderOnCallViewModel;

<h6>MD's On Call</h6>
<div class="container" style="margin-top:15px;">
    <div class="row">
        @foreach (var item in Model.MDOnCall)
        {
            <div class="col-md-3" style="display:flex;">
                <img src="~/uploads/physician/@item.PhysicianId/photo.jpg" style="margin-right:10px;" height="80px" width="80px" />
                <span>@item.PhysicianName</span>
            </div>
        }
    </div>
</div>
<h6 style="margin-top:15px;">Physicians Off Duty</h6>
<div class="container" style="margin-top:15px;">
    <div class="row">
        @foreach (var item in Model.PhysicianOffDuty)
        {
            <div class="col-md-4" style="display:flex;margin-bottom:20px;">
                <img src="~/uploads/physician/@item.PhysicianId/photo.jpg" style="margin-right:10px;" height="80px" width="80px" />
                <span>@item.PhysicianName</span>
            </div>
        }
    </div>
</div>
